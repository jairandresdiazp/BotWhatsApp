{
    "background":{
       "persistent":true,
       "scripts":[
          "background.js"
       ]
    },
    "browser_action":{
       "default_icon":"icons/icon32.png",
       "default_popup":"settings_popup.html",
       "default_title":"Bot WhatsApp"
    },
    "content_scripts":[
       {
          "js":[
             "config.js",
             "script.js"
          ],
          "matches":[
             "https://web.whatsapp.com/*"
          ],
          "run_at":"document_end"
       }
    ],
    "description":"Conectar un bot con una cuenta de WhatsApp",
    "icons":{
       "16":"icons/icon16.png",
       "32":"icons/icon32.png",
       "48":"icons/icon48.png",
       "64":"icons/icon64.png",
       "128":"icons/icon128.png"
    },
    "manifest_version":2,
    "name":"Bot WhatsApp",
    "options_page":"settings.html",
    "permissions":[
       "tabs",
       "webRequest",
       "webRequestBlocking",
       "http://*/",
       "https://*/"
    ],
    "version":"1.0.0",
    "web_accessible_resources":[
       "client.js"
    ]
 }